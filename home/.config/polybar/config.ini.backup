[colors]
; Nord Color Scheme (with translucency)
; Use #AARRGGBB for translucency (AA = alpha)
background = #CC2e3440
background-alt = #993b4252
surface = #B23b4252
surface-alt = #803b4252

foreground = #eceff4
foreground-alt = #d8dee9

primary = #88c0d0
secondary = #81a1c1
accent = #bf616a
yellow = #ebcb8b
green = #a3be8c
orange = #d08770
red = #bf616a
magenta = #b48ead
blue = #5e81ac
cyan = #88c0d0

border = #88c0d0
border-alt = #3b4261

; Дополнительные цвета для улучшенного дизайна
gradient-1 = #88c0d0
gradient-2 = #81a1c1
gradient-3 = #5e81ac

[bar/main]
; Основные настройки
width = 100%
height = 24pt
offset-x = -15
offset-y = 0
radius = 10
fixed-center = true
wm-restack = i3
override-redirect = false
bottom = false

; Цвета
background = ${colors.background}
foreground = ${colors.foreground}

; Красивый бордер с градиентом
border-size = 1.5
border-top-size = 1.5
border-bottom-size = 1.5
border-left-size = 1.5
border-right-size = 1.5
border-color = ${colors.border}

; Отступы для внутреннего пространства
padding-left = 8
padding-right = 8
module-margin-left = 1
module-margin-right = 1

; Шрифты
font-0 = "JetBrainsMono Nerd Font:size=10;3"
font-1 = "Material Design Icons:size=12;4"
font-2 = "Font Awesome 6 Free:style=Solid:size=11;4"

; Модули
modules-left = launcher i3
modules-center = date
modules-right = network cpu-rounded memory-rounded disk pulseaudio battery

; Системный трей
tray-position = right
tray-background = #00000000
tray-scale = 1.0
tray-maxsize = 16
tray-padding = 4
tray-offset-x = 0
tray-offset-y = 0
tray-detached = false

; Курсоры
cursor-click = pointer
cursor-scroll = ns-resize

; ========== МОДУЛЬ i3 ==========
[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Иконки рабочих пространств
ws-icon-0 = 1;󰈹
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;
ws-icon-9 = 10;
ws-icon-default = 

; Стили состояний с ВНУТРЕННИМИ скруглениями
label-mode-padding = 6
label-mode-background = ${colors.accent}
label-mode-foreground = ${colors.background}

label-focused = %icon%
label-focused-background = ${colors.surface}
label-focused-foreground = ${colors.foreground}
label-focused-padding = 6

label-unfocused = %icon%
label-unfocused-background = ${colors.surface-alt}
label-unfocused-foreground = ${colors.foreground-alt}
label-unfocused-padding = 6

label-visible = %icon%
label-visible-background = ${colors.surface}
label-visible-foreground = ${colors.foreground}
label-visible-padding = 6

label-urgent = %icon%
label-urgent-background = ${colors.red}
label-urgent-foreground = ${colors.background}
label-urgent-padding = 6

; ========== МОДУЛЬ ЗАПУСКА ==========
[module/launcher]
type = custom/text
content = " 󰣇 "
content-background = ${colors.secondary}
content-foreground = ${colors.background}
content-padding = 8

click-left = rofi -show drun -show-icons -theme
click-right = rofi -show run -theme 
click-middle = rofi -show window -theme

; ========== РАЗДЕЛИТЕЛИ ДЛЯ КРАСИВЫХ ПЕРЕХОДОВ ==========
[module/sep-left]
type = custom/text
content = ""
content-foreground = ${colors.background-alt}
content-background = ${colors.background}

[module/sep-right]
type = custom/text
content = ""
content-foreground = ${colors.background-alt}
content-background = ${colors.background}

; ========== УЛУЧШЕННЫЕ МОДУЛИ ==========
[module/cpu-rounded]
type = internal/cpu
interval = 2
format = <label>
format-background = ${colors.surface}
format-foreground = ${colors.foreground}
format-padding = 8

label = " 󰻠 %percentage:2%% "

click-left = htop &
click-right = notify-send "CPU" "Загрузка: %percentage:2%%" &

[module/memory-rounded]
type = internal/memory
interval = 2
format = <label>
format-background = ${colors.surface}
format-foreground = ${colors.foreground}
format-padding = 8

label = " 󰍛 %percentage_used:2%% "

click-left = htop &
click-right = notify-send "Память" "Использовано: %percentage_used:2%% (%used%/%total%)" &

; ========== МОДУЛЬ ДАТЫ И ВРЕМЕНИ ==========
[module/date]
type = internal/date
interval = 1

date = " 󰃶 %a, %d %b "
date-alt = " 󰃶 %A, %d %B %Y "

time = " 󰥔 %H:%M "
time-alt = " 󰥔 %H:%M:%S "

format = <label>
format-background = ${colors.surface}
format-foreground = ${colors.foreground}
format-padding = 8

label = %date%%time%

click-left = gsimplecal &
click-right = notify-send "Время" "$(date '+%A, %d %B %Y\n%H:%M:%S')" &


; ========== МОДУЛЬ АУДИО ==========
[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume>
label-volume = " 󰕾 %percentage%% "
label-volume-background = ${colors.surface}
label-volume-foreground = ${colors.foreground}
label-volume-padding = 6

format-muted = <label-muted>
label-muted = " 󰖁 %percentage%% "
label-muted-background = ${colors.surface}
label-muted-foreground = ${colors.foreground-alt}
label-muted-padding = 6

click-right = pavucontrol &
click-middle = pactl set-sink-mute @DEFAULT_SINK@ toggle
scroll-up = pactl set-sink-volume @DEFAULT_SINK@ +5%
scroll-down = pactl set-sink-volume @DEFAULT_SINK@ -5%

; ========== МОДУЛЬ СЕТИ ==========
[module/network]
type = internal/network
interface = auto
interval = 3.0
format-connected = <ramp-signal> <label-connected>
format-disconnected = <label-disconnected>
label-connected = " %essid% %local_ip% "
label-disconnected = " 󰤭 Disconnected "
label-disconnected-background = ${colors.red}
label-disconnected-foreground = ${colors.background}
label-disconnected-padding = 6

ramp-signal-0 = " 󰤯 "
ramp-signal-1 = " 󰤟 "
ramp-signal-2 = " 󰤢 "
ramp-signal-3 = " 󰤥 "
ramp-signal-4 = " 󰤨 "

format-connected-background = ${colors.surface}
format-connected-foreground = ${colors.foreground}
format-connected-padding = 6

click-left = nm-connection-editor &
click-right = notify-send "Сеть" "SSID: %essid%\nIP: %local_ip%" &

; ========== МОДУЛЬ ДИСКА ==========
[module/disk]
type = internal/fs
interval = 25
mount-0 = /
format-mounted = <label-mounted>
format-unmounted = <label-unmounted>
label-mounted = " 󰋊 %percentage_used%% "
label-unmounted = " 󰋊 -- "
label-unmounted-background = ${colors.red}
label-unmounted-foreground = ${colors.background}
label-unmounted-padding = 6

format-mounted-background = ${colors.surface}
format-mounted-foreground = ${colors.foreground}
format-mounted-padding = 6

; ========== МОДУЛЬ БАТАРЕИ ==========
[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full = <ramp-capacity> <label-full>

label-charging = " %percentage%% "
label-discharging = " %percentage%% "
label-full = " %percentage%% "

ramp-capacity-0 = " 󰂎 "
ramp-capacity-1 = " 󰁺 "
ramp-capacity-2 = " 󰁻 "
ramp-capacity-3 = " 󰁼 "
ramp-capacity-4 = " 󰁽 "

animation-charging-0 = " 󰢟 "
animation-charging-1 = " 󰢜 "
animation-charging-2 = " 󰂆 "
animation-charging-3 = " 󰂇 "
animation-charging-4 = " 󰂈 "
animation-charging-framerate = 750

format-charging-background = ${colors.green}
format-charging-foreground = ${colors.background}
format-charging-padding = 6

format-discharging-background = ${colors.surface}
format-discharging-foreground = ${colors.foreground}
format-discharging-padding = 6

format-full-background = ${colors.green}
format-full-foreground = ${colors.background}
format-full-padding = 6

[settings]
screenchange-reload = true
